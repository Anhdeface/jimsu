<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jimsu - Nghe Nhạc</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Animate.css for animation effects -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <link rel="stylesheet" href="/style_home.css">
</head>
<body>
  <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-light fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-music-note-beamed"></i> Jimsu</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <!-- nav-link active la trang hiện tại -->
             <!-- nav-link la trang khac -->
            <a class="nav-link active" aria-current="page" href="/">
              <i class="bi bi-house-door"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/account">
              <i class="bi bi-person-circle"></i> Tài khoản
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">
              <i class="bi bi-info-circle"></i> Giới thiệu
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container" style="margin-top: 90px;">
    <div class="row g-3">
      <% result.forEach(row => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <a href="/listen/<%=row.song_eng%>" class="song-link text-decoration-none">
            <div class="d-flex align-items-center border rounded shadow-sm px-3 py-2 bg-white flex-row song-card h-100">
              <img src="/<%=row.path_img%>"
                   alt="Ảnh bài hát"
                   class="song-img flex-shrink-0">
              <div class="ms-3 flex-grow-1 song-info">
                <div class="fw-semibold text-primary song-title">
                  <%=row.name_song%>
                </div>
                <div class="small text-muted song-author">
                  <i class="bi bi-person-badge"></i> <%=row.author%>
                </div>
                <div class="small text-muted song-poster">
                  <i class="bi bi-person-circle"></i>  <%=row.poster%>
                </div>
                <div class="small text-muted"><i class="bi bi-caret-right-fill"></i>  <%=row.id_songs%></div>
              </div>
            </div>
          </a>
        </div>
      <% })%>
    </div>
  </div>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script_home.js"></script>
</body>
</html>
