<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jimsu - Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <!-- Animate.css for animation -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="/style_account.css">
</head>
<body>
        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-light fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-music-note-beamed"></i> Jimsu</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <!-- nav-link active la trang hiện tại -->
             <!-- nav-link la trang khac -->
            <a class="nav-link" aria-current="page" href="/">
              <i class="bi bi-house-door"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/account">
              <i class="bi bi-person-circle"></i> Tài khoản
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">
              <i class="bi bi-info-circle"></i> Giới thiệu
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    <div class="snowflake-container" id="snowContainer"></div>
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="account-card p-4 fade-in">
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/6/67/User_Avatar.png" class="avatar-rounded me-3 shadow" alt="Avatar">
                        <div>
                            <h4 id="accountName" class="mb-0 d-inline-block"><%= username %></h4>
                        </div>
                    </div>
                    <!-- Thời gian hiện tại theo giờ Việt Nam -->
                    <div class="mb-3">
                        <div id="vnTime" class="px-3 py-2 rounded bg-light shadow-sm d-inline-block fw-semibold text-primary"></div>
                    </div>
                    <hr>
                    <!-- Danh sách bài hát đã nghe -->
                    <div>
                        <button class="btn btn-outline-primary w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#songList" aria-expanded="false" aria-controls="songList">
                            Danh sách bài hát đã nghe
                        </button>
                        <div class="collapse" id="songList">
                            <ul class="list-group mb-3">
                                <% res.forEach(row=>{ %>
                                <li class="list-group-item"><%= row.id_songs %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <!-- Danh sách bài hát đã upload -->
                    <div>
                        <button class="btn btn-outline-success w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#uploadedSongList" aria-expanded="false" aria-controls="uploadedSongList">
                            Danh sách bài hát đã upload
                        </button>
                        <div class="collapse" id="uploadedSongList">
                            <ul class="list-group mb-3">
                                <li class="list-group-item">Tính năng đang phát triển</li>
                            </ul>
                        </div>
                    </div>
                    <!-- Đổi mật khẩu -->
                    <div>
                        <button class="btn btn-outline-warning w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#changePassword" aria-expanded="false" aria-controls="changePassword">
                            Đổi mật khẩu (Tính năng đang phát triển)
                        </button>
                        <div class="collapse" id="changePassword">
                            <form class="mt-3 fade-in">
                                <div class="mb-2">
                                    <label for="oldPassword" class="form-label">Mật khẩu cũ</label>
                                    <input type="password" class="form-control" id="oldPassword" required>
                                </div>
                                <div class="mb-2">
                                    <label for="newPassword" class="form-label">Mật khẩu mới</label>
                                    <input type="password" class="form-control" id="newPassword" required>
                                </div>
                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Nhập lại mật khẩu mới</label>
                                    <input type="password" class="form-control" id="confirmPassword" required>
                                </div>
                                <button type="submit" class="btn btn-warning w-100">Xác nhận đổi mật khẩu</button>
                            </form>
                        </div>
                    </div>
                    <!-- Nút Upload và Đăng xuất -->
                    <div class="d-flex gap-2 mt-3">
                        <a href="/upload" class="btn btn-success flex-fill">
                            <i class="bi bi-cloud-arrow-up"></i> Upload
                        </a>
                        <a href="/logout" class="btn btn-outline-danger flex-fill">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </a>
                    </div>
                    <hr>
                    <div class="text-end">
                        <small class="text-muted"><span id="vipBadgeFooter" class="vip-badge">VIP</span></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script_account.js"></script>
</body>
</html>